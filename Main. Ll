-- Create the loading screen GUI
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local loadingScreen = Instance.new("ScreenGui")
loadingScreen.Name = "LoadingScreen"
loadingScreen.ResetOnSpawn = false
loadingScreen.Parent = playerGui

-- Create a background frame
local bgFrame = Instance.new("Frame")
bgFrame.Size = UDim2.new(1, 0, 1, 0)
bgFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
bgFrame.BackgroundTransparency = 0.2
bgFrame.Parent = loadingScreen

-- Create the loading text
local loadingText = Instance.new("TextLabel")
loadingText.Size = UDim2.new(0.3, 0, 0.1, 0)
loadingText.Position = UDim2.new(0.35, 0, 0.45, 0)
loadingText.Text = "Loading..."
loadingText.TextColor3 = Color3.fromRGB(400, 400, 400)
loadingText.BackgroundTransparency = 1
loadingText.TextScaled = true
loadingText.Font = Enum.Font.GothamBold
loadingText.Parent = bgFrame

-- Animate the loading text (optional)
task.spawn(function()
	local dots = ""
	while loadingScreen.Parent do
		dots = (dots == "...") and "" or (dots .. ".")
		loadingText.Text = "Loading" .. dots
		task.wait(5)
	end
end)

-- Simulate loading delay
task.wait(5)

-- Remove the loading screen
loadingScreen:Destroy()
